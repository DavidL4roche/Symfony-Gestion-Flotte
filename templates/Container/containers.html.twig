{% extends 'base.html.twig' %}

{% block body %}

    <section>
        <div class="container">

            <h1>Tous les containers</h1>

            <table class="table mt-5">
                <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Couleur</th>
                    <th>ContainerModel</th>
                    <th>ContainerShip</th>
                </tr>
                </thead>

                {% for container in containers %}
                    <tr>
                        <th scope="row">{{ container.id }}</th>
                        <td>{{ container.color }}</td>
                        <td>{{ container.containerModel }}</td>
                        <td>{{ container.containerShip }}</td>
                    </tr>
                {% endfor %}

            </table>

        </div>
    </section>

{% endblock %}