{% extends 'base.html.twig' %}

{% block body %}

    <section>
        <div class="container">

            <form method="post" class="col col-lg-6 mx-auto">

                <h1 class="mb-5">Ajouter un containerShip</h1>

                <div class="form-group">
                    <label for="">Nom du ContainerShip</label>
                    <input type="text" name="name" class="form-control">
                </div>

                <div class="form-group">
                    <label for="">Nom du Capitaine</label>
                    <input type="text" name="captain_name" class="form-control">
                </div>

                <div class="form-group">
                    <label for="">Limite du container</label>
                    <input type="number" name="container_limit" class="form-control">
                </div>

                <input type="submit" value="Enregistrer le containerShip" class="form-control btn btn-success">

            </form>

        </div>
    </section>

{% endblock %}