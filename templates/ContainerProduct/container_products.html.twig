{% extends 'base.html.twig' %}

{% block body %}

    <section>
        <div class="container">

            <h1>Tous les container products</h1>

            <a href="{{ path('product_container_new') }}" class="btn btn-success"><i class="fa fa-plus mr-2"></i>Ajouter un ContainerProduct</a>

            <table class="table mt-5">
                <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Container</th>
                    <th>Product</th>
                    <th>Quantity</th>
                </tr>
                </thead>

                {% for containerProduct in containerProducts %}
                    <tr>
                        <th scope="row">{{ containerProduct.id }}</th>
                        <td>{{ containerProduct.container }}</td>
                        <td>{{ containerProduct.product }}</td>
                        <td>{{ containerProduct.quantity }}</td>
                    </tr>
                {% endfor %}

            </table>

        </div>
    </section>

{% endblock %}