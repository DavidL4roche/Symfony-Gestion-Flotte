{% extends 'base.html.twig' %}

{% block body %}

    <section>
        <div class="container">

            <h1>Produit <b>{{ product.name }}</b></h1>

            <table class="table mt-5">
                <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Longueur</th>
                    <th>Largeur</th>
                    <th>Hauteur</th>
                </tr>
                </thead>
                <tr>
                    <th scope="row">{{ product.id }}</th>
                    <td>{{ product.name }}</td>
                    <td>{{ product.length }}</td>
                    <td>{{ product.width }}</td>
                    <td>{{ product.height }}</td>
                </tr>
            </table>

        </div>
    </section>

{% endblock %}