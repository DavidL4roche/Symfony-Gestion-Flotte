{% extends 'base.html.twig' %}

{% block body %}

    <section>
        <div class="container">

            <form method="post" class="col col-lg-6 mx-auto">

                <h1 class="mb-5">Ajouter un produit</h1>

                <div class="form-group">
                    <label for="">Nom du produit</label>
                    <input type="text" name="name" class="form-control">
                </div>

                <div class="form-group">
                    <label for="">Longueur</label>
                    <input type="number" name="length" class="form-control">
                </div>

                <div class="form-group">
                    <label for="">Largeur</label>
                    <input type="number" name="width" class="form-control">
                </div>

                <div class="form-group">
                    <label for="">Hauteur</label>
                    <input type="number" name="height" class="form-control">
                </div>

                <input type="submit" value="Enregistrer le product" class="form-control btn btn-success">

            </form>

        </div>
    </section>

{% endblock %}